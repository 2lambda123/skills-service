{
  "name": "e2e-tests",
  "version": "1.0.0",
  "license": "Apache-2.0",
  "description": "SkillTree Dashboard and Client Display End to End Tests",
  "author": "SkillTree Team",
  "main": "index.js",
  "scripts": {
    "licenseDepCheck": "license-checker --production --onlyAllow='MIT;ISC;Apache-2.0' --summary",
    "licenseHeaderCheck": "license-check-and-add check -f '../license-add/license-add-config.json'",
    "licenseHeaderAdd": "license-check-and-add add -f ../license-add/license-add-config.json",
    "licenseCheck": "npm run licenseHeaderCheck && npm run licenseDepCheck",
    "cy:open": "cypress open",
    "cy:open:dev": "cypress open --config baseUrl=http://localhost:8082",
    "cy:run": "npm run licenseCheck && cypress run",
    "cy:run:dev": "cypress run --config baseUrl=http://localhost:8082",
    "cy:verify": "cypress verify",
    "backend:start": "java -Dspring.config.location=classpath:/application.yml,file:serverConfigs/backend_application.properties -jar ../backend/target/backend-*.jar",
    "backend:start:ci": "npm run backend:start &",
    "backend:waitToStart": "npx wait-on -t 40000 http://localhost:8080",
    "backend:resetDb": "java -cp ./cypress/db/h2-1.4.200.jar org.h2.tools.RunScript -url jdbc:h2:tcp://localhost:9090/mem:skills -user sa -script ./cypress/db/reset.sql",
    "client-display:serve": "cd ../client-display && npm prune && npm install && npm run serve",
    "client-display:serve:ci": "npm run client-display:serve &",
    "client-display:waitToStart": "npx wait-on -t 80000 http://localhost:8083",
    "cyServices:start:skills-service": "run-s backend:start:ci backend:waitToStart",
    "cyServices:start:client-display": "run-s client-display:serve:ci client-display:waitToStart",
    "cyServices:start": "run-s cyServices:start:skills-service cyServices:start:client-display",
    "cyServices:kill:skills-service": "for procid in $(ps -aux | grep \"serverConfigs/.*properties\" | grep \"jar$\" | awk '{print $2}'); do kill -9 $procid; done",
    "cyServices:kill:client-display": "for procid in $(ps -aux | grep \"client-display\" | grep \"npm run serve\" | grep -v \"grep\" | awk '{print $2}'); do echo \"killing ${procid}\"; kill -9 $procid; done",
    "cyServices:kill:client-display:1": "for procid in $(ps -aux | grep \"client-display\" | grep \"vue-cli-service serve\" | grep -v \"grep\" | awk '{print $2}'); do echo \"killing ${procid}\"; kill -9 $procid; done",
    "cyServices:kill": "run-s cyServices:kill:skills-service cyServices:kill:client-display cyServices:kill:client-display:1",
    "print-env": "print-env"
  },
  "devDependencies": {
    "@bahmutov/print-env": "1.2.0",
    "cypress": "4.1.0",
    "cypress-file-upload": "3.5.3",
    "cypress-image-snapshot": "3.1.1",
    "license-check-and-add": "3.0.4",
    "license-checker": "25.0.1",
    "moment": "2.24.0",
    "npm-run-all": "4.1.5",
    "wait-on": "3.3.0"
  }
}
